{% extends 'base.html.twig' %}

{% block title %}Réinitialisation mot de passe{% endblock %}

{% block body %}
<section class="reset-password-form">
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1>Réinitialiser votre mot de passe !</h1>

    <div>
            <p>
                Entrez votre adresse e-mail afin de recevoir un lien pour réinitialiser votre mot de passe.
            </p>
    </div>
    
    {{ form_start(requestForm) }}
        {{ form_row(requestForm.email, { label: 'Email : ' }) }}
    

    <div class="form-error-email">
            <small>
                (Si vous n'avez pas reçu d'email, vérifiez vos spam ou essayez de vous inscrire à nouveau.)
            </small>
    </div>
        
        <button class="btn btn-primary">Envoyer l'email pour la réinitialisation du mot de passe</button>
    {{ form_end(requestForm) }}
</section>
{% endblock %}
